exclude_paths:
  - .venv/
  - .git/
  - .github/
  - src/
  - tests/

skip_list:
  - yaml[line-length]  # Allow longer lines in YAML
  - name[casing]       # Allow flexible task naming
  - var-naming[no-role-prefix]  # Skip variable naming issues in existing localhost role
  - command-instead-of-module   # Skip existing curl usage in localhost role
  - risky-shell-pipe           # Skip existing shell pipe usage in localhost role
  - no-changed-when            # Skip existing changed_when issues in localhost role

warn_list:
  - experimental       # Warn about experimental features
